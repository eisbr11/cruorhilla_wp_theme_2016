{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}
	<body class="{{body_class}}" data-template="base.twig">
		{% include 'widgets/circles_bg.twig' %}
		<header class="header" >
			{% block header %}
				<nav id="nav-main" class="navbar navbar-ch" role="navigation">
					<div class="container">
						{% include "menu.twig" with {'menu': menu.get_items} %}
					</div>
				</nav><!-- #nav -->
				<div class="container">
					<div class="row">
						<div class="col-xs-12">
							<h1 class="hdr-logo" role="banner">
								<a class="hdr-logo-link" href="{{site.siteurl}}" rel="home">{{site.name}}</a>
							</h1>
						</div>
					</div>
				</div>
			{% endblock %}
		</header>

		<main id="content" role="main" class="container">
			<div class="row">
				<div class="col-xs-12">
					{% if title %}<h1>{{title}}</h1>{% endif %}
					<div class="wrapper {{sidebar_class}}">
						{% block content %}
							Sorry, no content
						{% endblock %}
					</div>
					{% if sidebar %}
						<aside class="layout-sidebar">
							{{sidebar}}
						</aside>
					{% endif %}
				</div>
			</div>
		</main>

		{% block footer %}
			<footer id="footer" class="container">
				<div class="row">
					<div class="col-xs-12">
						{% include 'footer.twig' %}
					</div>
				</div>
			</footer>
			{{ wp_footer }}
		{% endblock %}
	</body>
</html>
